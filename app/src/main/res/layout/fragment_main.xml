<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayoutMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <include
            android:id="@+id/weatherTopView"
            layout="@layout/fragment_weather_location_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/llMiddleView" />

        <include layout="@layout/toolbar" />

        <com.quixom.apps.weatherstream.weatherview.WeatherView
            android:id="@+id/weatherView"
            android:layout_width="match_parent"
            android:layout_height="320dp" />

        <LinearLayout
            android:id="@+id/llMiddleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/recyclerViewDaysWeather"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7dp"
                android:layout_marginStart="7dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvRainPrecipitationView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:drawableStart="@drawable/ic_rain_perception"
                    android:gravity="center_vertical"
                    android:includeFontPadding="true"
                    android:text="@string/rain_perception"
                    android:textColor="@color/font_primary"
                    android:textSize="14sp"
                    android:backgroundTint="@color/fire_bush"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="2dp"
                    android:includeFontPadding="false"
                    android:text="@string/precipitation"
                    android:textAllCaps="true"
                    android:textColor="@color/font_thirdly"
                    android:textSize="10sp"
                    tools:ignore="SmallSp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7dp"
                android:layout_marginStart="7dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvHumidityView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:drawablePadding="2dp"
                    android:drawableStart="@drawable/ic_humidity"
                    android:gravity="center_vertical"
                    android:includeFontPadding="true"
                    android:text="@string/humidity"
                    android:textColor="@color/font_primary"
                    android:textSize="14sp"
                    android:tint="@color/orange" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="2dp"
                    android:includeFontPadding="false"
                    android:text="@string/humidity_label"
                    android:textAllCaps="true"
                    android:textColor="@color/font_thirdly"
                    android:textSize="10sp"
                    tools:ignore="SmallSp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7dp"
                android:layout_marginStart="7dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvWindView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:drawablePadding="2dp"
                    android:drawableStart="@drawable/ic_wind_sock"
                    android:gravity="center_vertical"
                    android:includeFontPadding="true"
                    android:text="@string/wind"
                    android:textColor="@color/font_primary"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="2dp"
                    android:includeFontPadding="false"
                    android:text="@string/wind_label"
                    android:textAllCaps="true"
                    android:textColor="@color/font_thirdly"
                    android:textSize="10sp"
                    android:tint="@color/orange"
                    tools:ignore="SmallSp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7dp"
                android:layout_marginStart="7dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvDirectionView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:drawablePadding="2dp"
                    android:drawableStart="@drawable/ic_compass_west_north"
                    android:gravity="center"
                    android:includeFontPadding="true"
                    android:text="@string/direction"
                    android:textColor="@color/font_primary"
                    android:textSize="14sp"
                    android:tint="@color/orange" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="2dp"
                    android:includeFontPadding="false"
                    android:text="@string/direction_label"
                    android:textAllCaps="true"
                    android:textColor="@color/font_thirdly"
                    android:textSize="10sp"
                    tools:ignore="SmallSp" />
            </LinearLayout>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewDaysWeather"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="5dp"
            android:scrollbars="none" />

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>